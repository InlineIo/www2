<%- include('../../../../views/layout/header'); -%>
<div data-controller="{{name}}">
  <%- include('../../../../views/components/title', {title: "{{options.title}}", sub: "{{options.description}}"}) %>
  <div class="mb-4 card">
    <div class="card-body">
      <h5 class="card-title">Add a new {{options.singular.toLowerCase()}}</h5>
      <form class="form-inline" data-action="{{name}}#save">
        <div class="form-group mb-2 mr-2">
          <label for="newProjectName" class="mr-2">{{options.singular}} name</label>
          <input type="text" placeholder="New project" class="form-control" id="newProjectName" data-target="{{name}}.name">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Create</button>
      </form>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">{{title}} list</h5>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody data-target="{{name}}.list">
          <%- include("components/list-items", {{{name}}: {{name}}}); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('../../../../views/layout/footer'); -%>